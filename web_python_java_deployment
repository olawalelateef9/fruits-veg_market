pipeline {
    agent any 

    parameters {
        string(name: 'PYTHON_NODE', defaultValue: '3.144.249.171', description: 'Python Backend IP')
        string(name: 'JAVA_NODE', defaultValue: '3.142.164.163', description: 'Java Backend IP')
        string(name: 'WEB_NODE', defaultValue: '3.137.162.252', description: 'Frontend Web IP')   
    }

    stages {
        stage('Deploy Python Backend (Fruits)') {
            steps {
                sshagent(credentials: ['AWS_SSH_KEY']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ec2-user@${params.PYTHON_NODE} "
                            sudo yum install git python3 -y
                            rm -rf fruits-veg_market
                            # Updated to your repository URL
                            git clone https://github.com/olawalelateef9/fruits-veg_market.git
                            cd fruits-veg_market/python
                            
                            python3 -m venv .venv
                            source .venv/bin/activate
                            pip install --upgrade pip
                            pip install -r requirements.txt
                            
                            sudo cp fruits.service /etc/systemd/system/fruits.service
                            sudo systemctl daemon-reload
                            sudo systemctl restart fruits.service
                            sudo systemctl enable fruits.service
                        "
                    """
                }
            }
        }

        stage('Deploy Java Backend (Vegetables)') {
            steps {
                sshagent(credentials: ['AWS_SSH_KEY']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ec2-user@${params.JAVA_NODE} "
                            sudo yum install git java-17-amazon-corretto maven -y
                            rm -rf fruits-veg_market
                            # Updated to your repository URL
                            git clone https://github.com/olawalelateef9/fruits-veg_market.git
                            
                            echo '--- VERIFYING FILE EXISTENCE ---'
                            ls -R fruits-veg_market/java
                            
                            cd fruits-veg_market/java
                            mvn clean package -DskipTests
                            
                            # This will now find the file you just pushed
                            sudo cp vegetables.service /etc/systemd/system/vegetables.service
                            
                            sudo systemctl daemon-reload
                            sudo systemctl restart vegetables.service
                            sudo systemctl enable vegetables.service
                        "
                    """
                }
            }
        }

        stage('Deploy Frontend (Nginx)') {
            steps {
                sshagent(credentials: ['AWS_SSH_KEY']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ec2-user@${params.WEB_NODE} "
                            sudo yum install git nginx -y
                            sudo systemctl start nginx
                            
                            rm -rf fruits-veg_market
                            # Updated to your repository URL
                            git clone https://github.com/olawalelateef9/fruits-veg_market.git
                            cd fruits-veg_market/
                            
                            # Replacing placeholders in the HTML
                            sed -i 's/FRUIT_MACHINE/${params.PYTHON_NODE}/g' web/index.html
                            sed -i 's/VEG_MACHINE/${params.JAVA_NODE}/g' web/index.html
                            
                            sudo cp web/index.html /usr/share/nginx/html/index.html
                        "
                    """
                }
            }
        }
    }
}