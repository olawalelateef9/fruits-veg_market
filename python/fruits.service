[Unit]
Description=Python FastAPI Fruits Service
After=network.target

[Service]
User=ec2-user
Group=ec2-user
WorkingDirectory=/home/ec2-user/fruits-veg_market/python
ExecStart=/home/ec2-user/fruits-veg_market/python/.venv/bin/python3 -m uvicorn main:app --host 0.0.0.0 --port 9000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target