[Unit]
Description=FastAPI Market Backend
After=network.target

[Service]
User=ec2-user
Group=ec2-user
WorkingDirectory=/home/ec2-user/fruits-veg_market/backend-api
# The full path to python3 ensures we aren't relying on shell alias
ExecStart=/usr/bin/python3 -m uvicorn main:app --host 0.0.0.0 --port 8000 --app-dir /home/ec2-user/fruits-veg_market/backend-api
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target