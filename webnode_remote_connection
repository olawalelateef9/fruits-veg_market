pipeline {
    agent any
    stages {
        
        // --- Stage 1: Remote Installation ---
        stage ('Installation of Packages') {
            steps {
                sshagent (credentials: ['AWS_SSH_KEY']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ec2-user@18.191.4.127 '
                            sudo yum install git -y;
                            sudo yum install nginx -y;
                            sudo systemctl start nginx;
                            sudo systemctl enable nginx;
                        '
                    """
                }
            }
        }
        
        // --- Stage 2: Remote Deployment ---
        stage ('Deployment') {
            steps {
                sshagent (credentials: ['AWS_SSH_KEY']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ec2-user@18.191.4.127 '
                            # 1. Remove existing directory to prevent "already exists" error
                            sudo rm -rf ~/fruits-veg_market &&
                            
                            # 2. Clone fresh copy of the repository
                            git clone https://github.com/olawalelateef9/fruits-veg_market.git && 
                            
                            # 3. Copy index.html from the "frontend" folder 
                            sudo cp frontend/index.html /usr/share/nginx/html
                        '
                    """
                }
            }
        }
    }
}